<title>{{ page_title() }}</title>
{% if page_description() %}
    <meta name="description" content="{{ page_description() }}" />
{% endif %}
{% if page_keywords() %}
    <meta name="keywords" content="{{ page_keywords() }}" />
{% endif %}
{% if page_link_canonical() %}
    <link rel="canonical" {% if page_link_canonical_lang() %} hreflang="{{ page_link_canonical_lang() }}"{% endif%} href="{{ page_link_canonical() }}" />
{% endif %}
{% if page_og_title() %}
    <meta property="og:title" content="{{ page_og_title() }}" />
    <meta name="twitter:title" content="{{ page_og_title() }}" />
{% endif %}
{% if page_og_description() %}
    <meta property="og:description" content="{{ page_og_description() }}" />
    <meta name="twitter:description" content="{{ page_og_description() }}" />
{% endif %}
{% if page_og_image() %}
    <meta property="og:image" content="{{ page_og_image() }}" />
{% endif %}
{% if page_twitter_image() %}
    <meta name="twitter:image" content="{{ page_twitter_image() }}" />
{% endif %}
{% if page_og_url() %}
    <meta property="og:url" content="{{ page_og_url() }}" />
{% endif %}
{% if page_og_site_name() %}
    <meta property="og:type" content="{{ page_og_type() }}" />
    <meta property="og:site_name" content="{{ page_og_site_name() }}" />
{% endif %}
{% if page_twitter_card() %}
    <meta name="twitter:card" content="{{ page_twitter_card() }}" />
{% endif %}
{% if page_twitter_site() %}
    <meta name="twitter:site" content="{{ page_twitter_site() }}" />
{% endif %}
