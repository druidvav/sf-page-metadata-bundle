<title>{{ page_render_title() }}</title>

<meta name="description" content="{{ page_render_meta_description() }}" />
<meta name="keywords" content="{{ page_render_meta_keywords() }}" />

{% if page_og_enabled() %}
    {% if page_og_type() %}
        <meta property="og:type" content="{{ page_og_type() }}" />
    {% endif %}
    {% if page_og_site_name() %}
        <meta property="og:site_name" content="{{ page_og_site_name() }}" />
    {% endif %}
{% endif %}
{% if page_og_image() %}
    <meta property="og:image" content="{{ page_og_image() }}" />
{% endif %}
{% if page_twitter_image() %}
    <meta name="twitter:image" content="{{ page_twitter_image() }}" />
{% endif %}
{% if page_twitter_site() %}
    <meta name="twitter:site" content="{{ page_twitter_site() }}" />
{% endif %}